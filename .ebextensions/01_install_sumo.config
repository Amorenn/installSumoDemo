container_commands:

   01_get_rpm_package:
      command: "wget https://collectors.sumologic.com/rest/download/rpm/64"
   02_create_sumo_json:
       command: "mkdir /opt/elasticbeanstalk/sumologic"
       ignoreErrors: true
files:
    /opt/elasticbeanstalk/sumologic/sumologic.json:
      content:  |-
       {
   "api.version":"v1",
   "sources":[
      {
         "sourceType":"LocalFile",
         "name":"LinuxLogs",
         "pathExpression":"/var/logs/*",
      }
   ]
} 

 

